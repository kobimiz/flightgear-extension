<Window x:Class="flightgearExtension.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flightgearExtension"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10" TextBlock.FontSize="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Menu" Grid.Row="0" Grid.Column="0" Padding="0 10 0 10"/>
        <Button x:Name="settingsButton" Content="Settings" Click="openSettings" Grid.Row="1" Width="auto" HorizontalAlignment="Left" Padding="5"/>
        <Button x:Name="launchButton" Content="Launch flightgear" Click="launchFG" Grid.Row="2" Width="auto" HorizontalAlignment="Left" Margin="0 10 0 0" Padding="5"/>
        <Button x:Name="startSimButton" Content="Start simulation" Click="startSim" Grid.Row="3" Width="auto" HorizontalAlignment="Left" Margin="0 10 0 0" Padding="5"/>
    </Grid>
</Window>
