<UserControl x:Class="flightgearExtension.Controls.menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:flightgearExtension.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Grid.Column="0" Grid.Row="0">
        <Label Content="Menu" Padding="0 10 0 10" HorizontalAlignment="center"/>
        <Button x:Name="settingsButton" Content="Settings" Click="openSettings" Width="auto" HorizontalAlignment="Stretch" Padding="5"/>
        <Button x:Name="launchButton" Content="Launch flightgear" Click="launchFG"  Width="auto" HorizontalAlignment="Stretch" Margin="0 10 0 0" Padding="5"/>
        <Button x:Name="startSimButton" Content="Start simulation" Click="startSim"  Width="auto" HorizontalAlignment="Stretch" Margin="0 10 0 0" Padding="5"/>
    </StackPanel>
</UserControl>
